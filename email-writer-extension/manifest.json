{
  "name": "Email Writer Assistant",
  "description": "AI-powered email reply generator",
  "version": "1.1",
  "manifest_version": 3,
  "permissions": ["activeTab", "storage"],
  "host_permissions": [
    "http://localhost:8080/*",
    "*://mail.google.com/*",
    "*://outlook.live.com/*",
    "*://outlook.office.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://mail.google.com/*",
        "*://outlook.live.com/*",
        "*://outlook.office.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": [
        "*://mail.google.com/*",
        "*://outlook.live.com/*",
        "*://outlook.office.com/*"
      ]
    }
  ],
  "action": {
    "default_title": "Email Writer Assistant"
  }
}